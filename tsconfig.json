{
   "compilerOptions": {
      "target": "es6",
      "module": "commonjs",
      "lib": [
         "dom",
         "es6",
         "es2017",
         "esnext.asynciterable"
      ],
      "sourceMap": true,
      "outDir": "./dist",
      "noImplicitAny": true,
      "noUnusedLocals": true,
      "noUnusedParameters": true,
      "noImplicitReturns": true,
      "noFallthroughCasesInSwitch": true,
      "esModuleInterop": true,
      "resolveJsonModule": true,
      "experimentalDecorators": true,
      "emitDecoratorMetadata": true
   },
   "exclude": [
      "node_modules"
   ],
   "include": [
      "./src/**/*.tsx",
      "./src/**/*.ts"
   ]
}